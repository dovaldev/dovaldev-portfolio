---

interface Props {
    title: string;
    subtitle: string;
    date: string;
    items: string[];
}

const {title, subtitle, date, items} = Astro.props;
---

<div class="flex flex-col gap-2">
    <h3>{title} - <span>{subtitle}</span></h3>
    <p>{date}</p>
    <ul>
        {items.map(item => (
            <li><Fragment set:html={item} /></li>
        ))}
    </ul>
</div>
